" set colorscheme
colorscheme molokai
" enable syntax processing
syntax enable
" set indent level to 2 spaces
set tabstop=2 shiftwidth=2
" use softtabs (spaces instead of tab characters)
set expandtab
" set number ruler on side
set relativenumber number
" highlight matching bracket characters
set showmatch

" search settings
" search incrementally
set incsearch
" highlight matches
set hlsearch


"leader commands
let mapleader=" "
