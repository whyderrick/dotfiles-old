silent! colorscheme molokai
syntax enable

set tabstop=2
set expandtab
set softtabstop=2
set shiftwidth=2


set number
set relativenumber

set incsearch
set hlsearch

let mapleader=" "

set backup
set backupdir=~/.vim-tmp,~/.tmp,~/tmp,/var/tmp,/tmp
set backupskip=/tmp/*,/private/tmp/*
set directory=~/.vim-tmp,~/.tmp,~/tmp,/var/tmp,/tmp
set writebackup
